<?xml version="1.0"?>
<robot name="handofros">

  <link name="usb_cam">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
		</visual>
	</link>

	<link name="stereo_cam">
		<visual>
			<origin xyz="0.1 0.1 0" rpy ="0 -1.57 0"/>
      <geometry>
        <cylinder length="0.3" radius="0.05"/>
      </geometry>
    </visual>
		<visual>
			<origin xyz="0.1 -0.1 0" rpy ="0 -1.57 0"/>
      <geometry>
        <cylinder length="0.3" radius="0.05"/>
      </geometry>
    </visual>
	</link>

	<joint name="usb_cam_to_stereo_cam" type="fixed">
		<origin xyz="0 0 1"/>
		<parent link="usb_cam"/>
		<child link="stereo_cam"/>
	</joint>

</robot>
